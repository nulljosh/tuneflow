    curl -s "https://www.starbucks.com/api/v1/stores/nearby?lat=$LAT&lng=$LON&limit=10" \
      -H "Accept: application/json" | jq -r '.stores[] | "ðŸ“ \(.name)\n   \(.address.streetAddressLine1)\n   \(.address.city), \(.address.postalCode)\n   ðŸ“ž \(.phoneNumber)\n"' 2>/dev/null || echo "API might need auth/different endpoint"
    ;;
